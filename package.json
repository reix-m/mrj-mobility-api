{
  "name": "mrj-mobility",
  "version": "1.0.0",
  "description": "Typescript API",
  "main": "index.js",
  "scripts": {
    "build": "./scripts/build.sh",
    "start": "node ./dist/application/api/main",
    "dev": "nodemon --source ./src --ext ts --exec \"ts-node -r tsconfig-paths/register ./src/application/api/main\"",
    "test": "jest --passWithNoTests --runInBand",
    "test:cov": "jest --passWithNoTests --runInBand --coverage",
    "format": "prettier --write .",
    "lint": "eslint '{src,test}/**/*.ts'",
    "lint:fix": "eslint --fix '{src,test}/**/*.ts'",
    "migration:create": "node ./node_modules/typeorm/cli.js migration:create",
    "migration:revert": "node ./node_modules/typeorm/cli.js migration:revert",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=20"
  },
  "author": "Maycon Jesus <maycon.r.dejesus@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@golevelup/ts-jest": "0.6.2",
    "@nestjs/testing": "^11.0.6",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.12.0",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.2",
    "dotenv": "^16.4.7",
    "eslint": "9.x",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "git-commit-msg-linter": "^5.0.8",
    "globals": "^15.8.0",
    "husky": "^9.1.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.9",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.15",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.0.1"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.6",
    "@nestjs/core": "^11.0.6",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.0.6",
    "@nestjs/swagger": "^11.0.3",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "env-var": "^7.5.0",
    "nodemailer": "^6.10.0",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "typeorm-transactional": "^0.5.0"
  }
}
